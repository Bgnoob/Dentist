@model IEnumerable<DentistViewModel>
<h2>Dentist Details </h2>


@foreach (var user in Model)
{
    <div>
      
        <label>Name: @user.Name </label><br>
        <label>Dentist Specialization: @user.Spec </label><br>
        <label>Town: @user.Town </label><br>
        <label>Description: @user.Description </label><br>
     

    </div>

}
@using (Html.BeginForm("Index", "Dentist", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div>
        <label for="NameInput">Studio Name:</label>
        <input type="text" id="NameInput" name="Name" />

    </div>

    <div>
        <label for="DescriptionInput">Description:</label>
        <input type="text" id="DescriptionInput" name="Description" />

    </div>

    <div>
        <label for="TownInput">Town:</label>
        <input type="text" id="TownInput" name="Town" />

    </div>

    <div>
        <label for="SpecInput">Specialization:</label>
        <input type="text" id="SpecInput" name="Spec" />

    </div>
    
    <div>
        <input type="submit" value="Save" />

    </div>

}
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")

}